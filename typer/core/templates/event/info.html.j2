{% extends 'common/base.html.j2' %}

{% block content %}
<h1>Wydarzenie {{ event.name }} (#{{ event.id }})</h1>
<hr/>
{% for field in fields %}
  {% if not field.is_relation %}
<p><b>{{ field.name }}:</b> {{ event[ field.name ] }}</p>
  {% endif %}
{% endfor %}

{% if bet_form %}
<hr/>
<form method="post" action="">
    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
    {{ bet_form }}
    <input type="submit" value="Obstaw!" />
</form>
{% endif %}
{% if bets %}
<hr/>
<table id="bets_history">
    <tr>
        <th>Typ</th>
        <th>Stawka</th>
        <th>Kurs</th>
        <th>Mo≈ºliwa wygrana</th>
        {% if not event.open %}<th>Wygrana</th>{% endif %}
        <th>Data zawarcia</th>
    </tr>

  {% for bet in bets %}
    <tr>
        <td>{{ bet.chosen_result }}</td>
        <td>{{ bet.value }}</td>
        <td>{{ bet.odd }}</td>
        <td>{{ bet.reward }}</td>
        {% if not event.open %}<td>{{ bet.reward * bet.won }}</td>{% endif %}
        <td>{{ bet.creation_time.strftime('%Y-%m-%d %H:%M') }}</td>
    </tr>
  {% endfor %}
</table>
{% endif %}
{% if event.open %}
<hr/>
    <a class="btn btn-info" href="close">Rozlicz</a>
{% endif %}
{% endblock %}
